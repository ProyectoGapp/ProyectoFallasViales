<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:background="@color/colorPrimaryDark"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/idlistas_cardview"
    android:layout_width="match_parent"
    card_view:cardUseCompatPadding="true"
    android:layout_height="wrap_content">

    <ImageView android:scaleType="centerCrop"
        android:id="@+id/id_listas_imagen"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        />
    <LinearLayout
        android:id="@+id/idlista_contenedor"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="#8c000000"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id_listas_nombre"
            android:layout_width="match_parent"
            android:textColor="#ffe3e3e3"
            android:layout_height="wrap_content"
            android:text="Ejemplo Recycler"/>

        <TextView
            android:id="@+id/id_listas_apellidos"
            android:layout_width="match_parent"
            android:textColor="#ffe3e3e3"
            android:layout_height="wrap_content"
            android:text="texto dos"/>

    </LinearLayout>


    <!--</LinearLayout>-->

</android.support.v7.widget.CardView>
