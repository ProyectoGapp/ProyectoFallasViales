<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/idlistas_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:orientation="vertical">-->

            <ImageView android:scaleType="centerCrop"
                android:id="@+id/id_listas_imagen"
                android:layout_width="match_parent"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_height="match_parent"
                />

            <TextView
                android:id="@+id/id_listas_nombre"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:textColor="@color/cardview_light_background"
                android:layout_height="wrap_content"
                android:text="Ejemplo Recycler"/>

            <TextView
                android:id="@+id/id_listas_apellidos"
                android:layout_width="match_parent"
                android:textColor="@color/cardview_light_background"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content"
                android:text="texto dos"/>

        <!--</LinearLayout>-->

    </android.support.v7.widget.CardView>

</LinearLayout>