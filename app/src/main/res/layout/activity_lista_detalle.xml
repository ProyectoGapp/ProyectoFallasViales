<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sena.com.co.fallasviales.listas.Activity_Detalle_Lista">

    <!--<ImageView-->
        <!--android:id="@+id/idimagen_detallelista"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="200dp"-->
        <!--android:background="@color/common_google_signin_btn_text_light_pressed"/>-->

    <FrameLayout
        android:id="@+id/id_lista_detalle_frame_cont"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="match_parent">
        <fragment
            android:id="@+id/id_lista_det_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="sena.com.co.fallasviales.fragments_mapa.Fragment_mapa_listadetalle">

        </fragment>


    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <TextView
            android:id="@+id/idtexto_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Nombre"/>
        <EditText
            android:id="@+id/idedit_nombre"
            android:hint="nombre"
            android:enabled="false"
            android:layout_below="@id/idtexto_nombre"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/idtexto_apellido"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/idedit_nombre"
            android:text="Apellido"/>

        <EditText
            android:id="@+id/idedit_apellido"
            android:hint="apellido"
            android:enabled="false"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idtexto_apellido"/>

        <TextView

            android:id="@+id/idtexto_correo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@id/idedit_apellido"
            android:text="Correo Electronico"/>

        <EditText
            android:id="@+id/idedit_correo"
            android:hint="Email"
            android:enabled="false"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idtexto_correo"/>










    </RelativeLayout>
    <Button
        android:id="@+id/id_button_imagen_dialogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver imagen"
        style="@style/botones"
        android:layout_alignParentBottom="true"/>

</LinearLayout>
